{
  "name": "azurite",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:3000 && electron electron/main.js\"",
    "electron:build": "rm -rf electron/node_modules electron/standalone dist .next && npm run build && mkdir -p electron/standalone && cp -r .next/standalone/. electron/standalone/ && cp -r public electron/standalone/public && mkdir -p electron/standalone/.next/static && cp -r .next/static/. electron/standalone/.next/static/ && electron-builder && cp -r electron/standalone/node_modules dist/mac-arm64/Azurite.app/Contents/Resources/standalone/",
    "electron:build:fast": "rm -rf electron/node_modules electron/standalone dist .next && npm run build && mkdir -p electron/standalone && cp -r .next/standalone/. electron/standalone/ && cp -r public electron/standalone/public && mkdir -p electron/standalone/.next/static && cp -r .next/static/. electron/standalone/.next/static/ && electron-builder --dir && cp -r electron/standalone/node_modules dist/mac-arm64/Azurite.app/Contents/Resources/standalone/"
  },
  "build": {
    "appId": "com.azurite.app",
    "productName": "Azurite",
    "directories": {
      "output": "dist",
      "app": "electron"
    },
    "files": [
      "**/*",
      "!standalone"
    ],
    "extraResources": [
      {
        "from": "electron/standalone",
        "to": "standalone",
        "filter": [
          "**/*",
          "node_modules/**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "emoji-picker-react": "^4.16.1",
    "lucide-react": "^0.556.0",
    "next": "16.0.7",
    "next-themes": "^0.4.6",
    "prismjs": "^1.30.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.68.0",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.6",
    "react-simple-code-editor": "^0.14.1",
    "react-tweet": "^3.2.2",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}